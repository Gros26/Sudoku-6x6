<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sudoku.controller.GameController">

    <children>
        <!-- Título del juego, centrado horizontalmente -->
        <Label layoutX="204.0" layoutY="43.0" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-font-family: Arial;                     -fx-text-fill: #2E3A59; -fx-background-color: #FFDD57;                     -fx-padding: 10; -fx-border-radius: 15;                     -fx-border-color: #FFC107; -fx-border-width: 3;                     -fx-effect: dropshadow(gaussian, #000000, 10, 0.3, 0, 0);" text="SUDOKU " />

        <!-- GridPane para el tablero de Sudoku -->
        <GridPane fx:id="gridPane" layoutX="50.0" layoutY="124.0" prefHeight="350.0" prefWidth="500.0">
            <columnConstraints>
                <!-- Aquí ajustamos para que las celdas estén alineadas -->
                <ColumnConstraints hgrow="ALWAYS" minWidth="0" prefWidth="80.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="0" prefWidth="80.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="0" prefWidth="80.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="0" prefWidth="80.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="0" prefWidth="80.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="0" prefWidth="80.0" />
            </columnConstraints>

            <rowConstraints>
                <!-- Ajustamos para que todas las filas tengan el mismo tamaño y sin márgenes internos -->
                <RowConstraints minHeight="0" prefHeight="50.0" />
                <RowConstraints minHeight="0" prefHeight="50.0" />
                <RowConstraints minHeight="0" prefHeight="50.0" />
                <RowConstraints minHeight="0" prefHeight="50.0" />
                <RowConstraints minHeight="0" prefHeight="50.0" />
                <RowConstraints minHeight="0" prefHeight="50.0" />
            </rowConstraints>
        </GridPane>

        <!-- Botón de ayuda centrado en la parte inferior -->
        <Button fx:id="HelpButton" layoutX="267.0" layoutY="493.0" mnemonicParsing="false" style="-fx-background-color: #007BFF;                                             -fx-font-size: 16; -fx-text-fill: white;                                             -fx-border-radius: 5; -fx-background-radius: 5;                                             -fx-cursor: hand;" text="Ayuda" />
    </children>
</AnchorPane>
